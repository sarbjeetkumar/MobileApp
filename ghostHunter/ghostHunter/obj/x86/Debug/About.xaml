<Page
    x:Class="ghostHunter.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ghostHunter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Data/aboutPage.png"/>
        </Grid.Background>

        <StackPanel>
            <Button x:ConnectionId='2' x:Name="backButton"                           Background="Red" FontStyle="Italic" Content="Back"></Button>
            <Button x:ConnectionId='3' x:Name="quitButton"                           Background="Red" FontStyle="Italic" Content="Quit"></Button>
        </StackPanel>
       
            <Grid  Margin="100,150,50,100">
            <ScrollViewer>
                <StackPanel x:ConnectionId='1' x:Name="aboutStack">

                    <TextBlock TextWrapping="Wrap" FontStyle="Italic" Text="Welcome to the Ghost hunt game."/>

                    <TextBlock TextWrapping="Wrap" FontStyle="Italic" 
                               Text="The Ghost hunting game allows you to hunt ghosts ! While playing this game you will face several types of ghosts that will appear on your screeen. Below you can see some pictures of ghosts that you must kill in this game."/>


                    <TextBlock TextWrapping="Wrap" FontStyle="Italic"
                               Text="The Picture below is the example of one of the ghost's from the game ."/>
                    
                    
                    <Image Source="Data/greenGhost.png" Height="40" />
                    <TextBlock TextWrapping="Wrap" FontStyle="Italic"
                               Text=" Once you see these ghosts on the screen you will have some seconds to kill them otherwise they will take your life and if you kill them they give leave you power and points ..."/>


                    <Image Source="Data/redGhost.png" Height="40" />

                    <TextBlock TextWrapping="Wrap" FontStyle="Italic"
                               Text="Furthermore once your score reaches 50 , you will face more ghosts as they will come faster on to the screen.."/>

                    <Image Source="Data/blueGhost.png" Height="40" />

                    <TextBlock TextWrapping="Wrap" FontStyle="Italic"
                               Text="Enjoy the game...."/>
                </StackPanel>

        </ScrollViewer>

    </Grid>


       
        


    </Grid>
</Page>

